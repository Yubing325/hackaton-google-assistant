{
    "name": "Hackaton - Google Assistant",
    "version": "1.0",
    "description": "Google assistant for chrome",
    "background": {
        "scripts": ["background.js", "auto-trigger.js"],
        "persistent" : false
    },
    "browser_action": {
        
    },
    "permissions": ["activeTab","contentSettings"],
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["contentScript.js","voice.js"]
        }
    ]
}